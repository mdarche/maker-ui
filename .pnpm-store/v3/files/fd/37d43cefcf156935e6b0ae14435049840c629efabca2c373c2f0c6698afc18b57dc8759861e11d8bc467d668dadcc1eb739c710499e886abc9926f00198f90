{"version":3,"sources":["../../src/supports/focus-in-hidden-iframe.js"],"names":["element","wrapper","_document","iframe","createElement","appendChild","iframeDocument","contentWindow","document","open","close","mutate","style","visibility","input","body","validate","focus","querySelector","activeElement"],"mappings":";;;;;kBACe;AACbA,WAAS,iBAASC,OAAT,EAAkBC,SAAlB,EAA6B;AACpC,QAAMC,SAASD,UAAUE,aAAV,CAAwB,QAAxB,CAAf;;AAEA;AACAH,YAAQI,WAAR,CAAoBF,MAApB;;AAEA;AACA,QAAMG,iBAAiBH,OAAOI,aAAP,CAAqBC,QAA5C;AACAF,mBAAeG,IAAf;AACAH,mBAAeI,KAAf;AACA,WAAOP,MAAP;AACD,GAZY;AAabQ,UAAQ,gBAASR,MAAT,EAAiB;AACvBA,WAAOS,KAAP,CAAaC,UAAb,GAA0B,QAA1B;;AAEA,QAAMP,iBAAiBH,OAAOI,aAAP,CAAqBC,QAA5C;AACA,QAAMM,QAAQR,eAAeF,aAAf,CAA6B,OAA7B,CAAd;AACAE,mBAAeS,IAAf,CAAoBV,WAApB,CAAgCS,KAAhC;AACA,WAAOA,KAAP;AACD,GApBY;AAqBbE,YAAU,kBAASb,MAAT,EAAiB;AACzB,QAAMG,iBAAiBH,OAAOI,aAAP,CAAqBC,QAA5C;AACA,QAAMS,QAAQX,eAAeY,aAAf,CAA6B,OAA7B,CAAd;AACA,WAAOZ,eAAea,aAAf,KAAiCF,KAAxC;AACD;AAzBY,C","file":"focus-in-hidden-iframe.js","sourcesContent":["\nexport default {\n  element: function(wrapper, _document) {\n    const iframe = _document.createElement('iframe');\n\n    // iframe must be part of the DOM before accessing the contentWindow is possible\n    wrapper.appendChild(iframe);\n\n    // create the iframe's default document (<html><head></head><body></body></html>)\n    const iframeDocument = iframe.contentWindow.document;\n    iframeDocument.open();\n    iframeDocument.close();\n    return iframe;\n  },\n  mutate: function(iframe) {\n    iframe.style.visibility = 'hidden';\n\n    const iframeDocument = iframe.contentWindow.document;\n    const input = iframeDocument.createElement('input');\n    iframeDocument.body.appendChild(input);\n    return input;\n  },\n  validate: function(iframe) {\n    const iframeDocument = iframe.contentWindow.document;\n    const focus = iframeDocument.querySelector('input');\n    return iframeDocument.activeElement === focus;\n  },\n};\n"]}