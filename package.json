{
  "private": true,
  "scripts": {
    "clean": "lerna run clean",
    "git-clean": "git clean -fXd -e \\!node_modules -e \\!node_modules/**/*",
    "git-reset": "git reset --hard HEAD",
    "docs-start": "yarn workspace docs dev",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test --",
    "lint": "lerna run lint -- --fix",
    "build": "lerna run build",
    "start:app": "yarn run build && yarn --cwd example && yarn --cwd example start",
    "cypress": "cypress run",
    "cypress:open": "cypress open-ct",
    "cypress:run": "cypress run-ct",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary"
  },
  "workspaces": [
    "examples/*",
    "packages/*",
    "docs"
  ],
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.5",
    "@cypress/react": "^5.4.2",
    "@cypress/webpack-dev-server": "^1.1.6",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.4",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/react-test-renderer": "^17.0.0",
    "babel-plugin-istanbul": "^6.0.0",
    "cypress": "^7.2.0",
    "cypress-plugin-tab": "^1.0.5",
    "cypress-react-selector": "^2.3.6",
    "html-webpack-plugin": "4",
    "husky": "^4.0.10",
    "jest": "^26.6.3",
    "jest-emotion": "^10.0.27",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "tsdx": "^0.13.2",
    "typescript": "^4.3.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,mdx,js,jsx}": [
      "npm run format",
      "tsdx lint"
    ]
  }
}
