{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx"
  }
}
