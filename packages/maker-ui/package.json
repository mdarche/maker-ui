{
  "name": "maker-ui",
  "description": "The fastest way to build themeable, responsive layouts in React",
  "version": "1.2.5",
  "license": "Apache-2.0",
  "author": "Mike Darche <mike@newcreative.io>",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "start": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint src --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@maker-ui/hooks": "workspace:*",
    "@maker-ui/layout": "workspace:*",
    "@maker-ui/style": "workspace:*",
    "@maker-ui/utils": "workspace:*"
  },
  "peerDependencies": {
    "react": "^17.x || ^18.x",
    "react-dom": "^17.x || ^18.x"
  },
  "devDependencies": {
    "tsconfig": "workspace:*",
    "tsup": "^5.12.0",
    "typescript": "^4.8.4"
  }
}
