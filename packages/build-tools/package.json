{
  "name": "@maker-ui/build-tools",
  "description": "A lightweight, flexible carousel component.",
  "version": "1.3.0",
  "license": "Apache-2.0",
  "author": "Mike Darche <mike@newcreative.io>",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup --minify src/index.ts --format esm,cjs --dts",
    "start": "tsup src/index.ts --watch --format esm,cjs --dts",
    "lint": "TIMING=1 eslint src --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "postcss": "^8.4.18",
    "postcss-modules": "^5.0.0",
    "postcss-nested": "^6.0.0"
  },
  "devDependencies": {
    "eslint-config-library": "workspace:*",
    "esbuild": "0.14.27",
    "tsconfig": "workspace:*",
    "tsup": "^5.12.0",
    "typescript": "^4.8.4"
  }
}
