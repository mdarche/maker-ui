{
  "name": "@maker-ui/elements",
  "description": "Customizable components for Maker UI themes.",
  "version": "1.2.2",
  "license": "Apache-2.0",
  "author": "Mike Darche <mike@newcreative.io>",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "docgen": "npx typedoc --tsconfig tsconfig.docs.json",
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "start": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint src --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@maker-ui/accordion": "workspace:*",
    "@maker-ui/popovers": "workspace:*",
    "@maker-ui/tabs": "workspace:*",
    "@maker-ui/modal": "workspace:*",
    "@maker-ui/generative": "workspace:*",
    "@maker-ui/notifications": "workspace:*"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-preset": "workspace:*",
    "tsconfig": "workspace:*",
    "tsup": "^5.12.0",
    "typescript": "^4.6.2"
  }
}
