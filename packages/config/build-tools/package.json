{
  "name": "@maker-ui/build-tools",
  "description": "A preconfigured esbuild tool for Maker UI packages",
  "version": "2.0.1",
  "license": "Apache-2.0",
  "author": "Mike Darche <mike@newcreative.io>",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --minify --format esm,cjs --dts",
    "start": "tsup src/index.ts --watch --format esm,cjs --dts",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "postcss": "^8.4.32",
    "postcss-modules": "^6.0.0",
    "postcss-nested": "^6.0.1"
  },
  "devDependencies": {
    "esbuild": "0.19.8",
    "eslint-config-library": "workspace:*",
    "tsconfig": "workspace:*"
  }
}
