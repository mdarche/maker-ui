{
  "name": "@maker-ui/lightbox",
  "description": "A lightbox modal for displaying content with detail views.",
  "version": "1.3.2",
  "license": "Apache-2.0",
  "author": "Mike Darche <mike@newcreative.io>",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "start": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint src --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@maker-ui/carousel": "workspace:*",
    "@maker-ui/modal": "workspace:*",
    "@maker-ui/spinners": "workspace:*",
    "@maker-ui/style": "workspace:*",
    "@maker-ui/transition": "workspace:*",
    "@maker-ui/utils": "workspace:*"
  },
  "peerDependencies": {
    "react": "^17.x || ^18.x",
    "react-dom": "^17.x || ^18.x"
  },
  "devDependencies": {
    "@maker-ui/build-tools": "workspace:*",
    "eslint-config-library": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig": "workspace:*",
    "tsup": "^6.6.3",
    "typescript": "^4.8.4"
  }
}
